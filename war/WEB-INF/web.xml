<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>TeacherServlet</servlet-name>
		<servlet-class>net.mrcullen.targetrecording.servlets.TeacherServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>TeacherServlet</servlet-name>
	    <url-pattern>/api/teacher/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>FormServlet</servlet-name>
		<servlet-class>net.mrcullen.targetrecording.servlets.FormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>FormServlet</servlet-name>
	    <url-pattern>/api/form/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>SubjectServlet</servlet-name>
		<servlet-class>net.mrcullen.targetrecording.servlets.SubjectServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>SubjectServlet</servlet-name>
	    <url-pattern>/api/subject/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>PupilServlet</servlet-name>
		<servlet-class>net.mrcullen.targetrecording.servlets.PupilServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>PupilServlet</servlet-name>
	    <url-pattern>/api/pupil/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>PupilTargetServlet</servlet-name>
		<servlet-class>net.mrcullen.targetrecording.servlets.PupilTargetServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>PupilTargetServlet</servlet-name>
	    <url-pattern>/api/target/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>TargetProgressServlet</servlet-name>
		<servlet-class>net.mrcullen.targetrecording.servlets.TargetProgressServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>TargetProgressServlet</servlet-name>
	    <url-pattern>/api/progress/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ResetServlet</servlet-name>
		<servlet-class>net.mrcullen.targetrecording.servlets.ResetServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>ResetServlet</servlet-name>
	    <url-pattern>/reset.html</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>RegisterPageServlet</servlet-name>
		<servlet-class>net.mrcullen.targetrecording.servlets.RegisterPageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>RegisterPageServlet</servlet-name>
	    <url-pattern>/register.html</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>PupilPageServlet</servlet-name>
		<servlet-class>net.mrcullen.targetrecording.servlets.PupilPageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>PupilPageServlet</servlet-name>
	    <url-pattern>/pupil</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>TeacherPageServlet</servlet-name>
		<servlet-class>net.mrcullen.targetrecording.servlets.TeacherPageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>TeacherPageServlet</servlet-name>
	    <url-pattern>/teacher</url-pattern>
	</servlet-mapping>
	<filter>
	    <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
	</filter>
	<filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
   	</filter-mapping>
	
	<filter>
	    <filter-name>AuthenticationFilter</filter-name>
        <filter-class>net.mrcullen.targetrecording.filters.UserAuthentication</filter-class>
        <init-param>
    		<param-name>RegistrationPage</param-name>
    		<param-value>/register.html</param-value>
  		</init-param>
	</filter>
	<filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
        <url-pattern>/pupil/*</url-pattern>
        <url-pattern>/teacher/*</url-pattern>
	</filter-mapping>
	
	<security-constraint>
        <web-resource-collection>
            <web-resource-name>profile</web-resource-name>
            <url-pattern>/api/*</url-pattern>
            <url-pattern>/pupil/*</url-pattern>
            <url-pattern>/teacher/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>
	
	<welcome-file-list>
	    <welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
